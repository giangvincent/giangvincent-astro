---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import { fetchBlogPosts, sortPostsByPublishedDate } from '../../lib/blogApi';

const posts = sortPostsByPublishedDate(await fetchBlogPosts());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li a {
				display: block;
				padding: 1rem;
				border-radius: 12px;
				border: 1px solid rgb(var(--gray-light));
				background: #fff;
			}
			.cover {
				display: block;
				width: 100%;
				height: 220px;
				margin-bottom: 1rem;
				object-fit: cover;
				border-radius: 8px;
			}
			.has-cover {
				padding: 0;
				overflow: hidden;
			}
			.has-cover .content {
				padding: 1rem;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul li a:hover,
			ul li a:focus {
				box-shadow: var(--box-shadow);
			}

			.excerpt {
				margin-top: 0.5rem;
				color: rgb(var(--gray-dark));
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a class={post.coverImageUrl ? 'has-cover' : ''} href={`/blog/${post.slug}/`}>
									{post.coverImageUrl && (
										<img class="cover" src={post.coverImageUrl} alt={post.title} loading="lazy" />
									)}
									<div class="content">
										<h4 class="title">{post.title}</h4>
										<p class="date">
											<FormattedDate date={post.publishedAt} />
										</p>
										{post.excerpt && <p class="excerpt">{post.excerpt}</p>}
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
